            <TextBox x:Name="idTextBox" Grid.Column="1" Margin="4,5,9,6" Grid.Row="2" Text="{Binding Id, Mode=OneWay}" MouseLeave="idTextBox_MouseLeave"/>
            <Label Content="Last Name:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,6,0,6" VerticalAlignment="Center"/>
            <TextBox x:Name="lastNameTextBox" Grid.Column="1" Margin="4,6,8,10" Text="{Binding LastName, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
            <Label Content="Notes:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,4,0,5" Grid.Row="8" VerticalAlignment="Center"/>
            <TextBox x:Name="notesTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="24" Margin="4,6,0,5" Grid.Row="8" Text="{Binding Notes, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>
            <Label Content="Add Children:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,5,0,5" Grid.Row="9" VerticalAlignment="Center"/>
            <TextBox x:Name="numOfKidsTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="24" Margin="4,5,0,7" Grid.Row="9" Text="{Binding children_combo_box.Count, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="18"/>
            <ComboBox x:Name="children_combo_box" Grid.Column="1" HorizontalAlignment="Left" Margin="2,35,0,-21" Grid.Row="9" VerticalAlignment="Top" Width="120" SelectionChanged="children_combo_box_SelectionChanged" ItemsSource="{Binding}"     />
