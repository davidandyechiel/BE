            <TextBox x:Name="addressNearHereTextBox" Grid.Column="1" Margin="4,5,9,6" Grid.Row="4" Text="{Binding AddressNearHere, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
            <Label Content="Cell Phone Num:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,4,0,5" Grid.Row="5" VerticalAlignment="Center"/>
            <TextBox x:Name="cellPhoneNumTextBox" Grid.Column="1" Margin="4,6,75,5" Grid.Row="5" Text="{Binding CellPhoneNum, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
