                        <TransformGroup>
                            <ScaleTransform ScaleY="0.5" ScaleX="-0.5"/>
                            <SkewTransform AngleY="0" AngleX="0"/>
                            <RotateTransform Angle="-180"/>
                            <TranslateTransform Y="-24"/>
                        </TransformGroup>
                    </Slider.RenderTransform>
                    <Slider.ToolTip>
                        <ToolTip>
                            <StackPanel>
                                <TextBlock FontWeight="Bold">Slider.value</TextBlock>
                            </StackPanel>
                        </ToolTip>
                    </Slider.ToolTip>
