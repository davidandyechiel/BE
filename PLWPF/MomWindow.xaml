            <Label Content="First Name:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,6,0,5" Grid.Row="1" VerticalAlignment="Center"/>
            <TextBox x:Name="firstNameTextBox" Grid.Column="1" Margin="4,8,7,7" Grid.Row="1" Text="{Binding FirstName, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
            <Label Content="Home Phone Num:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,5,0,4" Grid.Row="6" VerticalAlignment="Center"/>
            <TextBox x:Name="homePhoneNumTextBox" Grid.Column="1" Margin="4,6,75,5" Grid.Row="6" Text="{Binding HomePhoneNum, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
