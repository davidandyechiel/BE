<Window x:Class="PLWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="405*"/>
            <ColumnDefinition Width="112*"/>
        </Grid.ColumnDefinitions>
        <Menu x:Name="menu" Grid.Column="1" Margin="0,0,0,-1">
            <Button x:Name="mainPage" Content="MAIN" Width="100" Height="30" Click="mainPage_Click"/>
            <Button x:Name="signNanny" Content="SIGN UP NANNY" Width="100" Height="30" Click="signNanny_Click"/>
            <Button x:Name="signMother" Content="SIGN UP MOTHER" Width="100" Height="30" Click="signMother_Click"/>
            <Button x:Name="findNanny" Content="FIND A NANNY" Width="100" Height="30" Click="findNanny_Click"/>
            <Button x:Name="setting" Content="SETTING" Width="100" Height="30" Click="setting_Click"/>
        </Menu>
        <Frame x:Name="curretPage" Content="map_view" Margin="0,-5,0,4"  NavigationUIVisibility="Hidden"/>

    </Grid>
</Window>
